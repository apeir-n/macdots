#keybindings
keybind = cmd+h=goto_split:left
keybind = cmd+j=goto_split:down
keybind = cmd+k=goto_split:up
keybind = cmd+l=goto_split:right

keybind = cmd+shift+h=new_split:left
keybind = cmd+shift+j=new_split:down
keybind = cmd+shift+k=new_split:up
keybind = cmd+shift+l=new_split:right

keybind = cmd+ctrl+shift+h=resize_split:left,30
keybind = cmd+ctrl+shift+j=resize_split:down,30
keybind = cmd+ctrl+shift+k=resize_split:up,30
keybind = cmd+ctrl+shift+l=resize_split:right,30

keybind = global:cmd+shift+semicolon=toggle_quick_terminal
quick-terminal-autohide = true
quick-terminal-position = center

keybind = cmd+g=scroll_to_top
keybind = cmd+shift+g=scroll_to_bottom
keybind = cmd+u=scroll_page_lines:-25
keybind = cmd+d=scroll_page_lines:25
keybind = cmd+ctrl+k=scroll_page_lines:-1
keybind = cmd+ctrl+j=scroll_page_lines:1
keybind = cmd+x=close_surface

